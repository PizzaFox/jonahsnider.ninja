	},
	"dependencies": {
		"@types/node": "12.20.13",
		"@types/react": "17.0.5",
		"clsx": "1.1.1",
		"next": "10.2.0",
		"next-compose-plugins": "2.2.1",
		"next-pwa": "5.2.21",
		"next-seo": "4.24.0",
		"next-themes": "beta",
		"normalize.css": "8.0.1",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"sass": "1.32.13",
		"typescript": "4.2.4",
		"webpack": "webpack-4"
	},
	"devDependencies": {
		"eslint-config-xo-react": "0.25.0",
		"eslint-plugin-prettier": "3.4.0",
		"eslint-plugin-react": "7.23.2",
		"eslint-plugin-react-hooks": "4.2.0",
		"netlify-plugin-cache-nextjs": "1.6.1",
		"prettier": "2.3.0",
		"xo": "0.39.1"
	},
	"name": "jonahsnider.com",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"export": "next export",
		"lint": "xo",
		"preexport": "rm -rf out",
		"start": "next start",
		"style": "prettier --check ."
	},
	"version": "4.0.0",
	"xo": {
		"extends": [
			"xo",
			"xo/browser",
			"xo-react"
		],
		"ignores": [
			"public"
		],
		"overrides": [
			{
				"extends": [
					"xo"
				],
				"files": [
					"*.config.js",
					"src/config/*.ts"
				]
			}
		],
		"prettier": true,
		"rules": {
			"import/no-unassigned-import": [
				"error",
				{
					"allow": [
						"firebase/*",
						"firebase"
					]
				}
			],
			"react/no-unescaped-entities": "off",
			"react/prop-types": "off",
			"react/react-in-jsx-scope": "off"
		}
	}
}
